<%= form_with url: "/applications", method: :post, data: { turbo: false } do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name %><br/>

  <br><%= form.label :street_address, "Street Address:" %>
  <%= form.text_field :street_address%><br/>

  <br><%= form.label :city, "City:" %>
  <%= form.text_field :city %><br/>

  <br><%= form.label :state, "State:" %>
  <%= form.text_field :state %><br/>

  <br><%= form.label :zip_code, "Zip Code:" %>
  <%= form.number_field :zip_code %><br/>

  <br><%= form.label :description, "Description:" %>
  <%= form.text_area :description %><br/>
  
  <br><%= form.submit "Submit" %>
<% end %>
